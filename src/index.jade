block vars
  - var tituloPagina = 'Technodomus | Soluciones en equipo médico'
  - var descripcion = "Tecnología y servicios para los profesionales de la salud, imagenologia, rayos x, mesas de rayos X, salas de rayos X digitales y computarizados, tomografos, MRI, esterilizacion hospitalaria, plasma, peróxido de hidrógeno, alternativas al sistema sterrad, desinfeccion, trazabilidad, indicadores biológicos, documentación, radiología, película seca, DRYVIEW, productos Carestream, gke, Laoken y más; en México, Bajio, Zona Metropolitana, Puebla, Estado de México, Querétaro, Jalisco, San Luis Potosí, Guanajuato, Aguascalientes, Mérida, Yucatán, Veracruz y Tabasco, Morelos,"
  - var prodEsteril = {"titulo":"Esterilización", "link":"/esterilizacion/", "etiqueta": "esterilizacion", "imagen": "images/esterilizacion-usuario.png", "alt": "Facilidad de uso de los esterilizadores Laoken", "links": {"Esterilizadores de plasma": "/esterilizacion/esterilizacion/plasma.html"}}
  - var prodImagen = {"titulo": "Imagenología", "link": "/imagenologia/", "etiqueta": "imagenologia", "imagen": "images/imagenologia.png", "alt": "PACS, RIS y salidas digitales en imagenologia","links": {"PACS en la nube": "/imagenologia/PACS/pacs-enlanube.html", "Radiología digital": "/imagenologia/rx-digital/index.html"}}

  mixin frontcard(producto, vista)
    if vista = "escritorio"
      .card.card-principal.card-15x(id= producto.etiqueta)
        .card-heading
          img.img-fluid(src=baseUrl+ producto.imagen, alt= producto.alt caption= producto.alt)
          h1
            a(href= baseUrl + producto.link)= producto.titulo
        .card-body
          if block
            block
          ul
          each val, key in producto.links
            li
              a(href=baseUrl + val) #{key}
            
        
block content
  .container-fluid
    div
      //- a(href= baseUrl + "esterilizacion/esterilzacion/plasma-100L.html")
      //-   img.solomob.svg(src=baseUrl+"images/  ")
      //- a(href=baseUrl+"noticias/eventos/digitalfairs.html")
      //-   img.solomob.svg(src=baseUrl+"images/etiqueta-digitalfairs-p.svg", alt="Asiste a la Digital Fairs" style="width: 100%; height: auto;")
    
    #productos.carousel.slide.hidden-sm(data-ride='carousel')
