  - var noticia = "Posada Technodomus 2016"
  - var tituloPagina = noticia
  - var fecha = "14 de diciembre de 2016"
  - var descripcion = "El 3 de diciembre celebramos nuestra posada, la oportunidad para que todos los que trabajamos por la salud en Technodomus festejemos un año más de esfuerzos."
  
