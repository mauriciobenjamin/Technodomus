  - var baseUrl = './../../'
  - var producto = 'Soportes universales de silicona'
  - var tituloPagina = "Technodomus | " + producto
  - var bread = {Inicio: baseUrl, 'Esterilización': './../', 'Empaque': './', 'Soportes Universales':'./soportes-universales.html'}
