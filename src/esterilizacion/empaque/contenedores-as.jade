  - var producto = 'Contenedores Asipco de AS'
  - var tituloPagina = "Technodomus | " + producto
  - var bread = {Inicio: baseUrl, 'Esterilización': './../../', 'Empaque': './../', 'Contenedores':'./contenedores.html', 'Contenedores AS':'./contenedores-as.html'}
