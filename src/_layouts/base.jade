  - var baseUrl = config.baseUrl || './'
  - var google = 'https://plus.google.com/109633024373291114640'
  - var facebook = 'https://www.facebook.com/Technodomus/'
  - var twitter =  'https://www.twitter.com/Technodomus'
  
  
