block vars
include ../_modules/mixins

head
  meta(charset='utf-8')
  meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
  title #{tituloPagina}
  meta(name='description', content= 'Tecnologia y servicios para los profesionales de la salud, imagenologia, rayos x, esterilizacion, desinfeccion, radiologia y mas.')
  meta(name='viewport', content='width=device-width, initial-scale=1.0')
  block stylesheets
    link(rel='stylesheet', href= baseUrl + 'styles/main.css')
    link(rel="icon", href= baseUrl+"/favicon16.png" sizes="16x16" type="image/png")
    link(rel="icon", href= baseUrl+"/favicon32.png" sizes="32x32" type="image/png")

