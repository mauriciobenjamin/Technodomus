extends ./base

block append config
  - var cardp = "card card-primary"
  - var imgUrl = '../images/'
  - var bread = {Inicio: baseUrl}
  - var cotiza = {estilos: "cotiza", ref:"./cotiza/", fa:"info"}
// Add extra stylesheets
block append stylesheets

block content
 +cabecera(producto, bread)
 .botones.boton-flotante
    div(class="boton boton-#{cotiza.estilos}")
      a(href= baseUrl + "#{cotiza.ref}")
        i.fa.fa-2x(class="fa-#{cotiza.fa}")

  //- Provides layout level markup
  .layout-wrapper.productos
    block productos
    
// Add extra scripts
block append scripts
