- var columna = "columna text-center col-xs-12 col-sm-6 col-md-3"
- var fb = {"estilos": "fb","ref": "facebook.com/technodomus","fa": "facebook"}
- var tw = {"estilos": "tw","ref": "twitter.com","fa": "twitter"}
- var go = {"estilos": "go","ref": "https://plus.google.com/109633024373291114640","fa": "google"}
- var tel = {"estilos": "tel","ref": "tel:5553363212","fa": "phone"}
- var mail = {"estilos": "mail","ref": "mailto:info@technodomus.com","fa": "envelope"}

mixin mixbotones(icon, texto)
  li 
    .botones
      div(class="boton boton-#{icon.estilos}")
        a(href="#{icon.ref}")
          i.fa.fa-2x(class="fa-#{icon.fa}")
          
mixin panelcont(titulo)
  .text-center
    .panel
      h2= titulo
      if block
        block
      else
        p en construcción

mixin panelfb(titulo)
  .text-center
    .panel#facebook
      h2= titulo
      if block
        block
      else
        p en construcción
        
mixin paneltw(titulo)
  .text-center
    .panel#twitter
      h2= titulo
      if block
        block
      else
        p en construcción
      
.panel.panel-success
  .panel-heading
    h2 Contacta y cotiza
  .panel-body
    ul.contacto.text-center
      +mixbotones(tel)
      li
        strong (55)53363212 | 01800 874 9522
      +mixbotones(mail)
      li
        strong
          a(href="mailto:info@technodomus.com?cc=servicioaclientes@technodomus.com") Servicio a Clientes
      +mixbotones(tw)
      +mixbotones(fb)
      +mixbotones(go)
              
