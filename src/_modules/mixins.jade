//- card foto sola
mixin cardfoto(imagen,atText,titulo,link)
  .card.card-default
    .card-body
      if link
        a(href= link)
          img(src= baseUrl + 'images/' + imagen alt=atText title=titulo, class='img-fluid center')&attributes(attributes)    
      else
        img(src= baseUrl + 'images/' + imagen alt=atText title=titulo, class='img-fluid center')&attributes(attributes)    

