//- Genera un bloque de migajas de pan
mixin migajas(bread)
  div(arial-label="breadcrumb")
    ol.breadcrumb
      each val, key in bread 
        li.breadcrumb-item
          a(href=val) #{key}

//- Botones expansivos        
mixin mixboton(icon, texto)
  .botones
    div(class="boton boton-#{icon.estilos}")
      a(href="#{icon.ref}")
        i.fa.fa-2x(class="fa-#{icon.fa}")    
        
//- Boton de cotización 
mixin botonCotiza()
  .botones.boton-flotante
    div(class="boton boton-#{cotiza.estilos}")
      a(href= baseUrl + "#{cotiza.ref}")
        i.fa.fa-2x(class="fa-#{cotiza.fa}")
        
//- Cabecera jumbotron
mixin jumbo(titulo)
  .jumbotron.tituloJumbo
    h1.producto= titulo
    if block
